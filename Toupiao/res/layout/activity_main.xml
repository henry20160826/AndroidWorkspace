<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RL_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_newelection"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="新选举" />

    <Button
        android:id="@+id/btn_election"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btn_newelection"
        android:layout_below="@+id/btn_newelection"
        android:layout_marginTop="32dp"
        android:text="选举信息" />

    <Button
        android:id="@+id/btn_student"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btn_election"
        android:layout_below="@+id/btn_election"
        android:layout_marginTop="32dp"
        android:text="学生信息" />

</RelativeLayout>